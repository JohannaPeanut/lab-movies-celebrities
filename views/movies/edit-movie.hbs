<h2>Edit Movie:</h2>

<form action="/movies/{{ movie._id }}/edit" method="POST">
    <label for="title" >Title:</label>
    <input id="title" name="title" type="text" placeholder="{{ movie.title}}" value="{{ movie.title}}">
    <label for="genre">Genre:</label>
    <input id="genre" name="genre" type="text" placeholder="{{ movie.genre}}" value="{{ movie.genre}}">
    
    <label for="plot">Plot:</label>
    <input id="plot" name="plot" type="text" placeholder="{{ movie.plot}}" value="{{ movie.plot}}">
    <label for="cast">Cast:</label>
    <select name="cast" id="cast" multiple>
        {{#each celebrities}}
        <option value="{{ _id }}">{{ name }}</option>
        {{/each}}
    </select>
    <button type="submit">Update</button>
</form>